---
import { ViewTransitions } from "astro:transitions";
import { generateSEOTags } from "@utils/seo";

interface Props {
  title?: string;
  description?: string;
  type?: 'website' | 'article';
  image?: string;
  keywords?: string[];
}

const { title, description, type, image, keywords } = Astro.props;
const seo = generateSEOTags({ title, description, type, image, keywords });
---

<head>
  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-PBJM0849KH"></script>
  <script is:inline type="text/javascript">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());
    gtag("config", "G-PBJM0849KH");
  </script>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  <!-- Basic SEO -->
  <title>{seo.title}</title>
  <meta name="description" content={seo.description} />
  <meta name="keywords" content={seo.keywords} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={seo.ogTitle} />
  <meta property="og:description" content={seo.ogDescription} />
  <meta property="og:type" content={seo.ogType} />
  {seo.ogImage && <meta property="og:image" content={seo.ogImage} />}
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Font preloads -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Roboto+Condensed:wght@300;400;700&display=swap"
    rel="stylesheet"
  />

  <ViewTransitions />
  
  <slot name="head" />
</head>
