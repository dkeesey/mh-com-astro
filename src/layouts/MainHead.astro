---
import { ViewTransitions } from "astro:transitions";
import { generateTitle, generateDescription } from "@utils/seo";
const { title, description } = Astro.props;
const pageTitle = generateTitle(title);
const pageDescription = generateDescription(description);
---

<head>
  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-PBJM0849KH"></script>
  <script is:inline type="text/javascript">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-PBJM0849KH");
  </script>
  <meta charset="utf-8" />
  <slot name="head" />  <!-- Make sure this line exists -->
  <link rel="icon" type="image/svg+xml" href="/favicon/favicon.png" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <ViewTransitions />
  <meta name="description" content={pageDescription} />
  <meta name="generator" content="Astro" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto+Condensed:wght@400;700&display=swap"
    rel="stylesheet"
  />
</head>
