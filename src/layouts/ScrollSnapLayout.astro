---
import "../styles/global.css";
import Header from "../components/Header.astro";
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import { fade } from "astro:transitions";
---

<html lang="en" transition:animate="none">
  <MainHead />
  <body class="bg-museum-black text-museum-dark text-md font-sans w-screen">
    <!-- scroll container -->
    <div
      class="overflow-y-scroll snap-y snap-mandatory h-screen"
      transition:animate={fade({ duration: ".75s" })}
    >
      <Header classes="snap-item snap-start" />

      <main>
        <slot />
      </main>
      <Footer classes="snap-item snap-start mt-16" />
    </div>

    <style>
      footer {
        @apply fixed bottom-0 h-16; /* Adjust the h-16 value based on your footer's height */
      }
    </style>
  </body>
</html>
