---
import MainHead from "./MainHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FontLoader from "../components/FontLoader.astro";

interface Props {
  title?: string;
  description?: string;
  type?: 'website' | 'article';
  image?: string;
  keywords?: string[];
  classes?: string;
}

const { 
  title = "Support the Masumi Hayashi Foundation",
  description = "Your donation helps preserve and share Masumi Hayashi's artistic and cultural legacy.",
  type = 'website',
  image,
  keywords = ["donation", "support", "Masumi Hayashi", "photography", "art preservation"],
  classes = "" 
} = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} type={type} image={image} keywords={keywords}>
      <FontLoader />
    </MainHead>
  </head>
  <body class="bg-[#cccccc] text-fa-text-secondary font-inter min-h-screen">
    <div class={`flex flex-col min-h-screen ${classes}`}>
      <Header />
      <main class="flex-grow">
        <slot> Default text for unnamed slot </slot>
      </main>
      <Footer class="mt-auto" />
    </div>
  </body>
</html>

<style>
  body {
    /* Add any donation-specific global styles here */
  }
</style>
