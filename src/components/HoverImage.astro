---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  title: string;
  class?: string;
  width?: number;
  height?: number;
}

const { src, alt, title, class: className = "", width, height } = Astro.props;
---

<div class="transition-transform duration-300 hover:scale-105">
  <Image 
    src={src}
    alt={alt}
    title={title}
    width={width}
    height={height}
    class={`rounded-lg shadow-md ${className}`}
  />
</div>
