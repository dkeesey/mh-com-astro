---
interface Props {
  sections: {
    id: string;
    title: string;
  }[];
}

const { sections } = Astro.props;
---

<nav class="mt-8">
  <h2 class="text-lg font-semibold mb-4">Table of Contents</h2>
  <ul class="space-y-2">
    {
      sections.map((section) => (
        <li>
          <a
            href={`#${section.id}`}
            class="text-gray-600 hover:text-gray-900 transition-colors duration-200"
          >
            {section.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
