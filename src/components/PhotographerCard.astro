---
import { Image } from 'astro:assets';
import butcamIcon from '@images/family-album/contraband/butcam.gif';

interface Props {
  name: string;
  firstName: string;
  lastName: string;
  url: string;
}

const { name, url } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-4 p-4 rounded-lg transition-all duration-300 hover:bg-gray-800/20">
  <a href={url} class="transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
    <Image 
      src={butcamIcon}
      alt={`View ${name}'s photographs`}
      height={48}
      width={48}
      class="rounded-sm shadow-md hover:opacity-90 active:opacity-75"
    />
  </a>
  <a 
    href={url}
    class="text-lg font-medium text-gray-100 transition-colors duration-200 
           hover:text-amber-300 
           active:text-amber-500 
           visited:text-rose-300 
           focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:ring-offset-2 focus:ring-offset-gray-900 
           rounded font-robotoCondensed"
  >
    {name}
  </a>
</div>

<style>
  /* Ensure visited state doesn't override hover */
  a:visited:hover {
    color: rgb(252 211 77); /* amber-300 */
  }
</style>
