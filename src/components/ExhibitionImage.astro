---
// src/components/ExhibitionImage.astro
import { Image } from 'astro:assets';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;

// Handle both string paths and direct image imports
const imageSrc = typeof src === 'string' 
  ? (await import(`../images/family-album/${src.split('/').pop()}`)).default
  : src;
---

<figure class="relative">
  <Image
    src={imageSrc}
    alt={alt}
    class="w-full rounded-lg shadow-lg"
    loading="lazy"
  />
  {caption && (
    <figcaption class="mt-2 text-sm text-gray-600 text-center italic">
      {caption}
    </figcaption>
  )}
</figure>

<style>
  figure img {
    transition: transform 0.2s ease-in-out;
  }
  
  figure:hover img {
    transform: scale(1.01);
  }
</style>