---
// src/components/ExhibitionImage.astro
interface Props {
  src: string;
  alt: string;
  caption?: string;
  credit?: string;
  width?: string;
  height?: string;
  className?: string;
  isGallery?: boolean;
}

const { 
  src, 
  alt, 
  caption, 
  credit, 
  width = "100%",
  height = "auto",
  className = "",
  isGallery = false
} = Astro.props;
---

{isGallery ? (
  <div class={`my-12 ${className}`}>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <figure class="relative">
        <div class="aspect-[4/3] overflow-hidden rounded-lg bg-gray-100">
          <img 
            src="/images/famalbum/install.pic1.jpeg"
            alt="Exhibition installation view at Cleveland State University Art Gallery"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </figure>
      <figure class="relative">
        <div class="aspect-[4/3] overflow-hidden rounded-lg bg-gray-100">
          <img 
            src="/images/famalbum/install.pic3.jpeg"
            alt="Exhibition installation view at Cleveland State University Art Gallery"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </figure>
    </div>
    <figcaption class="mt-4 text-center text-sm text-gray-600 italic">
      Exhibition installation views, Cleveland State University Art Gallery, March 1996
    </figcaption>
  </div>
) : (
  <figure class={`my-8 ${className}`}>
    <div class="overflow-hidden rounded-lg bg-gray-100">
      <img 
        src={src}
        alt={alt}
        width={width}
        height={height}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
    {(caption || credit) && (
      <figcaption class="mt-3 text-sm text-gray-600">
        {caption && <span class="italic">{caption}</span>}
        {credit && (
          <span class="block mt-1 text-gray-500 text-xs">
            Photo: {credit}
          </span>
        )}
      </figcaption>
    )}
  </figure>
)}