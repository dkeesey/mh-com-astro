  }
];

// Group photographers by role for organized display
const groupedPhotographers = {
  official: photographers.filter(p => p.role === 'official'),
  amateur: photographers.filter(p => p.role === 'amateur'),
  visitor: photographers.filter(p => p.role === 'visitor'),
  canadian: photographers.filter(p => p.role === 'canadian')
};
---

<section class="my-16 space-y-16">
  {Object.entries(groupedPhotographers).map(([role, photographers]) => (
    <div class="space-y-6">
      <h2 class="text-2xl font-light text-gray-900 capitalize">
        {role === 'official' && 'Official Camp Photographers'}
        {role === 'amateur' && 'Amateur Photographers'}
        {role === 'visitor' && 'Visitor Photography'}
        {role === 'canadian' && 'Canadian Internment Photographers'}
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {photographers.map(photographer => (
          <a 
            href={`/family-album/photographers/${photographer.slug}`}
            class="group relative bg-gray-50 p-6 rounded-lg hover:bg-gray-100 transition-colors"
          >
            <div class="aspect-square mb-4 overflow-hidden rounded-lg bg-gray-200">
              {photographer.thumbnail ? (
                <img 
                  src={photographer.thumbnail} 
                  alt={`Photos by ${photographer.name}`}
                  class="w-full h-full object-cover transition-transform group-hover:scale-105"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <svg 
                    class="w-12 h-12 text-gray-400" 
                    viewBox="0 0 24 24" 
                    fill="none" 
                    stroke="currentColor" 
                    stroke-width="2" 
                    stroke-linecap="round" 
                    stroke-linejoin="round"
                  >
                    <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z" />
                    <circle cx="12" cy="13" r="4" />
                  </svg>
                </div>
              )}
            </div>
            
            <div class="space-y-2">
              <h3 class="text-lg font-medium text-gray-900">{photographer.name}</h3>
              <div class="text-sm text-gray-600">
                {photographer.location}
              </div>
              <div class="text-sm text-gray-500">
                {photographer.birth && `Born ${photographer.birth}`}
                {photographer.death && ` â€¢ Died ${photographer.death}`}
                {photographer.resettled && <div>Resettled: {photographer.resettled}</div>}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  ))}
</section>