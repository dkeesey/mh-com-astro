---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="max-w-4xl mx-auto py-8">
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  {description && <p class="text-lg text-gray-600 mb-6">{description}</p>}
  <div class="prose max-w-none">
    <slot />
  </div>
</section>
