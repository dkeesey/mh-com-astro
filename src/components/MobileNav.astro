---
interface Props {
  sections: {
    id: string;
    title: string;
  }[];
}

const { sections } = Astro.props;
---

<nav class="fixed bottom-4 left-4 right-4 bg-white rounded-lg shadow-lg p-4 z-50">
  <select
    class="w-full p-2 border rounded-md bg-white text-gray-800"
    onchange="document.getElementById(this.value).scrollIntoView({ behavior: 'smooth' })"
  >
    <option value="">Jump to section...</option>
    {
      sections.map((section) => (
        <option value={section.id}>{section.title}</option>
      ))
    }
  </select>
</nav>

<style>
  nav {
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.9);
  }
</style>
