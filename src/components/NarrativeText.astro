---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<section class={`mb-12 ${className}`}>
  {title && <h2 class="text-2xl font-semibold mb-4 font-robotoCondensed">{title}</h2>}
  <div class="prose prose-invert max-w-none prose-p:font-inter prose-p:text-lg prose-p:text-gray-300 prose-p:leading-relaxed">
    <slot />
  </div>
</section>
