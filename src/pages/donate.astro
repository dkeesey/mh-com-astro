---
import Layout from '../layouts/Layout.astro';
import DonorBox from '../components/DonorBox.astro';
---

<Layout title="Donate | Masumi Hayashi Foundation">
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-center">Support the Masumi Hayashi Foundation</h1>
            
            <p class="mb-6 text-lg text-center">
                Your donation helps preserve and share Masumi Hayashi's artistic and cultural legacy for future generations.
            </p>

            <div class="flex justify-center">
                <DonorBox />
            </div>
        </div>
    </main>
</Layout>
