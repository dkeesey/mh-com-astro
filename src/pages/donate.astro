---
import Layout from '../layouts/Layout.astro';
import DonorBox from '../components/DonorBox.astro';
---

<Layout title="Donate | Masumi Hayashi Foundation">
    <main class="container mx-auto px-4 mt-24 mb-32">
        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
                <h1 class="text-4xl font-bold mb-6 text-center text-gray-900">Support the Masumi Hayashi Foundation</h1>
                
                <p class="mb-8 text-lg text-center text-gray-700">
                    Your donation helps preserve and share Masumi Hayashi's artistic and cultural legacy for future generations.
                </p>

                <div class="flex justify-center">
                    <DonorBox />
                </div>
            </div>
        </div>
    </main>
</Layout>
