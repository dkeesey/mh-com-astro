---
import FamilyAlbumLayout from '@layouts/FamilyAlbumLayout.astro';
import { Image } from 'astro:assets';
import AlbumTitle from '@components/AlbumTitle.astro';
import PhotoGallery from '@components/PhotoGallery.astro';
import PhotographersGrid from '@components/PhotographersGrid.astro';
import Breadcrumb from '@components/Breadcrumb.astro';

// Import images
import fukuyama1 from '@images/family-album/photographers/fukuyama/fukuyama1.gif';
import fukuyama2 from '@images/family-album/photographers/fukuyama/fukuyama2.gif';
import fukuyama3 from '@images/family-album/photographers/fukuyama/fukuyama3.gif';
import fukuyama4 from '@images/family-album/photographers/fukuyama/fukuyama4.gif';

const title = "Family Album";
const description = "Family Album from Gila River Relocation Camp by Hideharu Fukuyama";

const photos = [
  {
    src: fukuyama1,
    alt: "Panoramic photo collage of Gila River Camp",
    description: "Fukuyama had won a Kodak award before entering Gila Relocation Camp. He was also experimenting with other types of photography, including panoramic photo collages (above) and hand colored landscapes. But primarily while in camp he photographed the traditional high school group shots and activities, other community activities."
  },
  {
    src: fukuyama2,
    alt: "View outside the guard tower",
    description: "As the war in the Pacific began to turn the restrictions in camplife eased. This is a photograph taken outside the guard tower and barbed wire fense. It is opposite the water tower (can be seen to the left of the catus) and monument but overlooking the panoramic of the relocation camp. These relocation camps were small cities, housing 10,000 or more internees."
  },
  {
    src: fukuyama3,
    alt: "Fukuyama family with water tank",
    description: "Hideharu Fukuyama photographed his family extensively within the confinds of the restricted area of the internment camp. Here the water tank is behind them."
  },
  {
    src: fukuyama4,
    alt: "Mrs. Fukuyama with children in doorway",
    description: "Mrs. Fukuyama standing in the doorway with the children dressed for the family photograph. The family resettled in the Los Angeles area."
  }
];
---

<FamilyAlbumLayout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <Breadcrumb
      items={[
        { label: "Home", href: "/" },
        { label: "Family Album Project", href: "/family-album-project" },
        { label: "Hideharu Fukuyama", href: "/family-album/fukuyama", current: true }
      ]}
    />
    
    <AlbumTitle
      title="Family Album"
      photographer="Hideharu Fukuyama"
      subtitle="Gila River Relocation Camp, Arizona"
      collection="The Fukuyama Family"
      date="1942-1945"
    />
    
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">About</h2>
      <div class="prose prose-invert max-w-none">
        <p>
          Hideharu Fukuyama was an accomplished photographer before his internment, having won a Kodak award. 
          During his time at Gila River Relocation Camp, he continued his photographic work, experimenting with 
          various techniques including panoramic photo collages and hand-colored landscapes. While serving as the 
          camp photographer, he documented both official events like high school activities and intimate family 
          moments, creating a comprehensive visual record of life within the internment camp.
        </p>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Photographs</h2>
      <PhotoGallery photos={photos} />
    </section>

    <div class="mt-16">
      <PhotographersGrid />
    </div>
  </main>
</FamilyAlbumLayout>
