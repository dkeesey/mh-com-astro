---
import HeroLayout from "../layouts/HeroLayout.astro";
import { Content as AboutContent } from '../content/pages/about.mdx';

const rameswaramData = {
  cloudinaryId: "sacred-architectures/rameswaram-1_baqkjr",
  title: "Rameswaram Temple, No.1",
  media: "Panoramic photo collage with Fuji Crystal archive prints",
  year: "2004",
  city: "Rameswaram",
  state: "Tamil Nadu",
  country: "India",
  size: '41" x 23"',
};
---

<HeroLayout 
  title="About Masumi Hayashi" 
  description="Learn about the life and work of Masumi Hayashi"
  heroImage={rameswaramData}
>
  <div class="prose lg:prose-xl mx-auto px-4 py-8 max-w-3xl">
    <h1 class="text-3xl font-bold mb-6">About Masumi Hayashi (1945-2006)</h1>
    <AboutContent />
  </div>
</HeroLayout>