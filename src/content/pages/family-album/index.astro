---
// src/pages/family-album/index.astro
import BaseLayout from '@layouts/BaseLayout.astro';
import PhotographerGrid from '@components/PhotographerGrid.astro';
import ExhibitionImage from '@components/ExhibitionImage.astro';
---

<BaseLayout title="The Family Album Pages">
  <!-- Hero with original banner image -->
  <div class="relative h-64 md:h-96 bg-gray-900">
    <img 
      src="/images/family-album/fambanner.jpg"
      alt="Family Album Banner"
      class="w-full h-full object-cover opacity-80"
    />
    <div class="absolute inset-0 flex items-center justify-center">
      <h1 class="text-4xl md:text-6xl text-white font-light">
        The Family Album Pages
      </h1>
    </div>
  </div>

  <main class="max-w-6xl mx-auto px-4 py-12">
    <!-- Introduction -->
    <div class="prose prose-lg mx-auto">
      <p class="text-xl font-light">
        These family album pages show pictures from the daily lives of the internees, 
        in both the Canadian and American camps...
      </p>
      
      <ExhibitionImage 
        src="/images/family-album/install-pic1.jpg"
        alt="Exhibition installation view"
        caption="Cleveland State University Art Gallery, March 1996"
      />
    </div>

    <!-- Photographer Grid -->
    <PhotographerGrid photographers={[
      {
        name: "Toyo Miyatake",
        link: "/photographers/toyo-miyatake",
        birthYear: "1895",
        birthPlace: "Kagawa, Japan",
        deathYear: "1979",
        deathPlace: "Los Angeles, California",
        camp: "Manzanar",
        category: "amateur",
      },
      {
        name: "Ansel Adams",
        link: "/photographers/ansel-adams",
        birthYear: "1902",
        birthPlace: "San Francisco, California",
        deathYear: "1984",
        deathPlace: "Monterey, California",
        camp: "Manzanar",
        category: "visitor",
      },
      {
        name: "Dorothea Lange",
        link: "/photographers/dorothea-lange",
        birthYear: "1895",
        birthPlace: "Hoboken, New Jersey",
        deathYear: "1965",
        deathPlace: "San Francisco, California",
        camp: "Various",
        category: "official",
      }
    ]} />

    <!-- Main Content Sections -->
    <div class="prose prose-lg mx-auto mt-16">
      <h2>The Camera and The Photographer</h2>
      {/* Content sections */}
    </div>
  </main>
</BaseLayout>